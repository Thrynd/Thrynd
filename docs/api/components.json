      "baseClass": "navbar",
      "subComponents": {
        "brand": {
          "class": "navbar-brand",
          "usage": "Logo or site name",
          "example": "<a href=\"#\" class=\"navbar-brand\">Brand</a>"
        },
        "nav": {
          "class": "navbar-nav",
          "usage": "Navigation links container",
          "example": "<ul class=\"navbar-nav\"><li><a href=\"#\" class=\"navbar-link\">Link</a></li></ul>"
        },
        "link": {
          "class": "navbar-link",
          "usage": "Navigation link",
          "example": "<a href=\"#\" class=\"navbar-link\">Home</a>"
        }
      },
      "variants": {
        "primary": {
          "class": "navbar-primary",
          "usage": "Colored background navbar",
          "example": "<nav class=\"navbar navbar-primary\">...</nav>"
        }
      },
      "accessibility": {
        "semantic": "Use <nav> element",
        "aria": "Add aria-label=\"Main navigation\""
      },
      "commonCombinations": [
        {
          "pattern": "standard-navbar",
          "html": "<nav class=\"navbar\"><a href=\"#\" class=\"navbar-brand\">Site</a><ul class=\"navbar-nav\"><li><a href=\"#\" class=\"navbar-link active\">Home</a></li><li><a href=\"#\" class=\"navbar-link\">About</a></li></ul></nav>",
          "usage": "Standard navigation bar"
        }
      ],
      "relatedComponents": ["sidebar", "breadcrumb"],
      "frameworks": {
        "react": "import { Navbar } from '@thrynd/react'",
        "vue": "import { Navbar } from '@thrynd/vue'",
        "svelte": "import { Navbar } from '@thrynd/svelte'"
      }
    },
    "modal": {
      "name": "Modal",
      "category": "overlay",
      "complexity": "complex",
      "description": "Dialog overlay for focused interactions",
      "baseClass": "modal",
      "structure": {
        "modal": {
          "class": "modal",
          "usage": "Modal container (fixed overlay)",
          "required": true
        },
        "dialog": {
          "class": "modal-dialog",
          "usage": "Dialog box itself",
          "required": true
        },
        "header": {
          "class": "modal-header",
          "usage": "Header with title and close button"
        },
        "body": {
          "class": "modal-body",
          "usage": "Main content area",
          "required": true
        },
        "footer": {
          "class": "modal-footer",
          "usage": "Action buttons"
        },
        "backdrop": {
          "class": "modal-backdrop",
          "usage": "Dark overlay behind modal",
          "required": true
        }
      },
      "sizes": {
        "small": {
          "class": "modal-dialog-sm",
          "usage": "Small dialogs"
        },
        "large": {
          "class": "modal-dialog-lg",
          "usage": "Large content dialogs"
        }
      },
      "accessibility": {
        "required": [
          "Use role=\"dialog\"",
          "Add aria-labelledby pointing to title",
          "Trap focus within modal when open",
          "Close with Escape key"
        ]
      },
      "commonCombinations": [
        {
          "pattern": "confirmation-modal",
          "html": "<div class=\"modal\"><div class=\"modal-dialog\"><div class=\"modal-header\"><h3 class=\"modal-title\">Confirm</h3></div><div class=\"modal-body\"><p>Are you sure?</p></div><div class=\"modal-footer\"><button class=\"btn-secondary\">Cancel</button><button class=\"btn-danger\">Delete</button></div></div></div><div class=\"modal-backdrop\"></div>",
          "usage": "Confirmation dialog"
        }
      ],
      "relatedComponents": ["button", "backdrop"],
      "frameworks": {
        "react": "import { Modal } from '@thrynd/react'",
        "vue": "import { Modal } from '@thrynd/vue'",
        "svelte": "import { Modal } from '@thrynd/svelte'"
      }
    }
  },
  "utilities": {
    "spacing": {
      "margin": {
        "prefix": "m",
        "values": [0, 1, 2, 3, 4, 6, 8],
        "directions": ["", "t", "r", "b", "l", "x", "y"],
        "example": "m-4 applies margin: 1rem to all sides"
      },
      "padding": {
        "prefix": "p",
        "values": [0, 1, 2, 3, 4, 6, 8],
        "directions": ["", "t", "r", "b", "l", "x", "y"],
        "example": "p-4 applies padding: 1rem to all sides"
      }
    },
    "colors": {
      "text": {
        "prefix": "text",
        "values": ["primary", "secondary", "success", "danger", "warning", "muted"],
        "example": "text-primary applies primary color to text"
      },
      "background": {
        "prefix": "bg",
        "values": ["primary", "secondary", "success", "danger", "white", "gray-50", "gray-100"],
        "example": "bg-primary applies primary background color"
      }
    },
    "layout": {
      "display": {
        "values": ["block", "inline-block", "flex", "grid", "hidden"],
