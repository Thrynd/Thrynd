      },
      "flexbox": {
        "align": ["items-center", "items-start", "items-end"],
        "justify": ["justify-center", "justify-between", "justify-around"],
        "example": "flex items-center justify-between"
      },
      "grid": {
        "columns": ["grid-cols-1", "grid-cols-2", "grid-cols-3", "grid-cols-4"],
        "responsive": ["sm:grid-cols-2", "md:grid-cols-3", "lg:grid-cols-4"],
        "gap": ["gap-2", "gap-4", "gap-6"],
        "example": "grid grid-cols-3 gap-4"
      }
    },
    "typography": {
      "size": {
        "values": ["text-xs", "text-sm", "text-base", "text-lg", "text-xl", "text-2xl", "text-3xl", "text-4xl"],
        "example": "text-xl applies 1.25rem font size"
      },
      "weight": {
        "values": ["font-normal", "font-medium", "font-semibold", "font-bold"],
        "example": "font-bold applies bold weight"
      },
      "align": {
        "values": ["text-left", "text-center", "text-right"],
        "example": "text-center centers text"
      }
    }
  },
